@model StudentManagement.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login User</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <style>
        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .loginbtn {
            padding-left: 500px;
        }
        .form {
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: right;
        }
        .signin{
            width:100%;
            max-width:500px;
            overflow:hidden;
        }
        label,h1{
            color:white;
        }
    </style>
</head>
<body style="background-image: url('../../Content/Images/Background.png');">
    <div class="form">
        <div class="signin">

            @using (Html.BeginForm())
            {



                <div class="form-group ">
                    <h1> Login </h1>
                </div>
                <div class="row">
                    <div class="form-group col-md-9 ">
                        <label>Login Id: </label>
                        @Html.EditorFor(model => model.LoginId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoginId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-9">
                        <label>Password:</label>
                        @Html.EditorFor(model => model.LoginPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoginPassword, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="">

                    <input type="submit" value="Login" class="btn btn-primary" />

                </div>


            }

        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script>
       
    $(function() {
        var message = '@ViewBag.Message';
        if (message  != '')
            swal({ title: "Done", text: message , icon: "error" });

    });
    </script>
</body>
</html>

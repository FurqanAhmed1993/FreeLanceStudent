@model IEnumerable<StudentManagement.Models.Semester>

<p>
    @Html.ActionLink("Create New", "AddSemester", "Semester", htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SemesterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SemesterYear)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SemesterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemesterYear)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSemesterDetails", new { SemesterId = item.SemesterId }) |
            @Html.ActionLink("Delete", "DeleteSemester", new { SemesterId = item.SemesterId })
        </td>
    </tr>
}

</table>
